<dx:ThemedWindow
    x:Class="Sklep.Views.Usuwanie_kategorii"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Usuwanie kategorii" Height="501" Width="501"
    >

    <Grid>
        <Label Content="Usuń kategorię:" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ComboBox x:Name="ComboBox_Kategoria" HorizontalAlignment="Left" Margin="104,35,0,0" VerticalAlignment="Top" Width="120" SelectedItem="{Binding id_kategorii}" DisplayMemberPath="nazwa_kategorii"/>
        <dx:SimpleButton x:Name="Zapisz" Content="Zapisz" HorizontalAlignment="Left" Height="46" Margin="283,23,0,0" VerticalAlignment="Top" Width="105" Glyph="{dx:DXImage SvgImages/Save/Save.svg}" Click="Zapisz_Click"/>

    </Grid>
</dx:ThemedWindow>
