<dx:ThemedWindow
    x:Class="Sklep.Views.Usuwanie_kategorii"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Usuwanie_kategorii" Height="800" Width="1000"
    >

    <Grid>
        <Label Content="Usuń kategorię:" HorizontalAlignment="Left" Margin="263,89,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ComboBox x:Name="ComboBox_Kategoria" HorizontalAlignment="Left" Margin="391,89,0,0" VerticalAlignment="Top" Width="120" SelectedItem="{Binding id_kategorii}" DisplayMemberPath="nazwa_kategorii"/>
        <dx:SimpleButton x:Name="Zapisz" Content="Zapisz" HorizontalAlignment="Left" Height="67" Margin="591,66,0,0" VerticalAlignment="Top" Width="143" Glyph="{dx:DXImage SvgImages/Save/Save.svg}" Click="Zapisz_Click"/>

    </Grid>
</dx:ThemedWindow>
