        <dx:SimpleButton x:Name="Zapisz" Content="Zapisz" HorizontalAlignment="Left" Height="35" Margin="395,10,0,0" VerticalAlignment="Top" Width="90" Glyph="{dx:DXImage SvgImages/Save/Save.svg}" Click="Zapisz_Click"/>

