<dx:ThemedWindow
    x:Class="Sklep.Views.Usuwanie_producenta"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Usuwanie producenta" Height="500" Width="495"
    >

    <Grid>
        <Label Content="Usuń producenta:" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ComboBox x:Name="ComboBox_Producent" HorizontalAlignment="Left" Margin="115,32,0,0" VerticalAlignment="Top" Width="120" SelectedItem="{Binding id_producenta}" DisplayMemberPath="nazwa_producenta"/>
        <dx:SimpleButton x:Name="Zapisz" Content="Zapisz" HorizontalAlignment="Left" Height="30" Margin="313,28,0,0" VerticalAlignment="Top" Width="100" Glyph="{dx:DXImage SvgImages/Save/Save.svg}" Click="Zapisz_Click"/>

    </Grid>
</dx:ThemedWindow>
