<dx:ThemedWindow
    x:Class="Sklep.Views.Usuwanie_dostawcy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Usuwanie dostawcy" Height="492" Width="509"
    >

    <Grid>
        <Label Content="Usuń dostawcę:" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ComboBox x:Name="ComboBox_Dostawca" HorizontalAlignment="Left" Margin="103,29,0,0" VerticalAlignment="Top" Width="120" SelectedItem="{Binding id_dostawcy}" DisplayMemberPath="nazwa_dostawcy"/>
        <dx:SimpleButton x:Name="Zapisz" Content="Zapisz" HorizontalAlignment="Left" Height="38" Margin="354,21,0,0" VerticalAlignment="Top" Width="105" Glyph="{dx:DXImage SvgImages/Save/Save.svg}" Click="Zapisz_Click"/>

    </Grid>
</dx:ThemedWindow>
