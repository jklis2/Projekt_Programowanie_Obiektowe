<dx:ThemedWindow
    x:Class="Sklep.Views.Usuwanie_produktu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Usuwanie_produktu" Height="501" Width="499"
    >

    <Grid>
        <Label Content="Usuń produkt:" HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ComboBox x:Name="ComboBox_Produkt" HorizontalAlignment="Left" Margin="96,26,0,0" VerticalAlignment="Top" Width="120" SelectedItem="{Binding id_produktu}" DisplayMemberPath="nazwa_produktu"/>
        <dx:SimpleButton x:Name="Zapisz" Content="Zapisz" HorizontalAlignment="Left" Height="38" Margin="318,18,0,0" VerticalAlignment="Top" Width="112" Glyph="{dx:DXImage SvgImages/Save/Save.svg}" Click="Zapisz_Click"/>

    </Grid>
</dx:ThemedWindow>
