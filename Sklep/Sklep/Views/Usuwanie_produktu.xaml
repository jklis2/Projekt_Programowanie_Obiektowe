<dx:ThemedWindow
    x:Class="Sklep.Views.Usuwanie_produktu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Usuwanie_produktu" Height="800" Width="1000"
    >

    <Grid>
        <Label Content="Usuń produkt:" HorizontalAlignment="Left" Margin="333,92,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ComboBox x:Name="ComboBox_Produkt" HorizontalAlignment="Left" Margin="465,92,0,0" VerticalAlignment="Top" Width="120" SelectedItem="{Binding id_produktu}" DisplayMemberPath="nazwa_produktu"/>
        <dx:SimpleButton x:Name="Zapisz" Content="Zapisz" HorizontalAlignment="Left" Height="81" Margin="720,114,0,0" VerticalAlignment="Top" Width="164" Glyph="{dx:DXImage SvgImages/Save/Save.svg}" Click="Zapisz_Click"/>

    </Grid>
</dx:ThemedWindow>
