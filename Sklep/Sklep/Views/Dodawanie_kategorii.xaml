<dx:ThemedWindow
    x:Class="Sklep.Views.Dodawanie_kategorii"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Dodawanie kategorii" Height="498" Width="502"
    >

    <Grid Margin="0,10,10,0">
        <Label Content="Nazwa kategorii:" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="Nazwa_kategorii_Text" HorizontalAlignment="Left" Margin="110,14,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="255"/>
        <dx:SimpleButton x:Name="Zapisz" Content="Zapisz" HorizontalAlignment="Left" Height="29" Margin="388,10,0,0" VerticalAlignment="Top" Width="84" Click="Zapisz_Click" Glyph="{dx:DXImage SvgImages/Save/Save.svg}"/>

    </Grid>
</dx:ThemedWindow>
